<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".EditTaskFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/task_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:hintTextColor="@color/dark_green"
        app:hintAnimationEnabled="true"
        app:boxStrokeColor="@color/dark_green">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/task_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:hint="@string/name_task"/>
    </com.google.android.material.textfield.TextInputLayout>

    <CheckBox
        android:id="@+id/task_done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/isDone"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_name" />

    <TextView
        android:id="@+id/title_date"
        android:text="@string/title_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/task_done"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/task_date"
        android:text="@string/choose_date"
        android:layout_width="0dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/title_date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/img_calendar" />

    <ImageView
        android:id="@+id/img_calendar"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/task_date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/task_date"
        app:layout_constraintTop_toTopOf="@+id/task_date"
        android:contentDescription="@string/content_description_img_calendar"
        android:src="@drawable/icon_calendar"/>

    <TextView
        android:id="@+id/title_remind"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/remind"
        android:textSize="18dp"
        android:paddingEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/task_date" />

    <Switch
        android:id="@+id/switch_remind"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.1"
        android:scaleY="1.1"
        android:switchMinWidth="40dp"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/title_remind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/title_remind"
        app:layout_constraintTop_toTopOf="@+id/title_remind"
        app:layout_constraintVertical_bias="0.001" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/remind_button"
        android:layout_width="56dp"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_drawble"
        android:state_selected="true"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        android:text="+"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/switch_remind"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/switch_remind" />

    <TimePicker
        android:id="@+id/timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:visibility="gone"
        android:timePickerMode="spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_remind" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/delete_button"
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:background="@drawable/button_drawble"
        android:state_selected="true"
        android:text="@string/delete_task"
        android:textColor="@color/black"
        app:backgroundTint="@null"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/timePicker" />
</androidx.constraintlayout.widget.ConstraintLayout>
